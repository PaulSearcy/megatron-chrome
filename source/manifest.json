{
    "name": "IGX Helper Extension",
    "manifest_version": 2,
    "version": "1.2",
    "description": "Set of functions to help out with common operations when working in IGX CMS",
    "options_ui":{
        "page": "options.html"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
       "16": "igx.ico",
       "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "clipboardWrite",
        "storage",
        "http://*/",
        "https://*/"
    ]
}
