{
  "name": "IGX ID Copy",
  "manifest_version": 2,
  "version": "1.0",
  "description": "Checks the page to see if it's powered by the IGX CMS and if it does enables user to copy xID upon icon click",
  "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
       "16": "igx.ico",
       "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "http://*/",
        "https://*/"
    ]
}
